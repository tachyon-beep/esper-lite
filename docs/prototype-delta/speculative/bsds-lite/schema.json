{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://esper.local/specs/bsds-lite.schema.json",
  "title": "BSDS-Lite (Prototype)",
  "type": "object",
  "additionalProperties": true,
  "required": ["risk_score", "hazard_band", "handling_class", "resource_profile", "provenance"],
  "properties": {
    "risk_score": { "type": "number", "minimum": 0.0, "maximum": 1.0 },
    "hazard_band": { "type": "string", "enum": ["LOW", "MEDIUM", "HIGH", "CRITICAL"] },
    "handling_class": { "type": "string", "enum": ["standard", "restricted", "quarantine"] },
    "resource_profile": { "type": "string", "enum": ["cpu", "gpu", "memory_heavy", "io_heavy", "mixed"] },
    "provenance": { "type": "string", "enum": ["URABRASK", "CURATED", "HEURISTIC", "EXTERNAL"] },
    "issued_at": { "type": "string" },
    "recommendation": { "type": "string" },
    "mitigation": { "type": "object", "additionalProperties": true },
    "hazards": {
      "type": "object",
      "additionalProperties": { "type": ["string", "number", "boolean", "null"] }
    }
  }
}

