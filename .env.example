# Esper-Lite environment configuration
# Copy to .env and adjust values for local development.

# Redis Streams (Oona)
REDIS_URL=redis://localhost:6379/0
OONA_NORMAL_STREAM=oona.normal
OONA_EMERGENCY_STREAM=oona.emergency

# Prometheus and Elasticsearch (Nissa)
PROMETHEUS_PUSHGATEWAY=http://localhost:9091
ELASTICSEARCH_URL=http://localhost:9200

# Leyline contract configuration
LEYLINE_SCHEMA_DIR=./contracts/leyline
LEYLINE_DEFAULT_NAMESPACE=esper.leyline.v1

# Tamiyo policy storage
TAMIYO_POLICY_DIR=./var/tamiyo/policies
TAMIYO_CONSERVATIVE_MODE=false

# Urza artifact storage
URZA_DATABASE_URL=sqlite:///./var/urza/catalog.db
URZA_ARTIFACT_DIR=./var/urza/artifacts

# Logging configuration
ESP_LOG_LEVEL=INFO

